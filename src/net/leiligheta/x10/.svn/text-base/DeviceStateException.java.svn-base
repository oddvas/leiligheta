package net.leiligheta.x10;

public class DeviceStateException extends Exception {
	private char houseCode;
	private int deviceCode;
	private String deviceState;

	public DeviceStateException(char houseCode, int deviceCode,
			String deviceState) {
		this.houseCode = houseCode;
		this.deviceCode = deviceCode;
		this.deviceState = deviceState;
	}

	/**
	 * 
	 */
	private static final long serialVersionUID = -4831839290828946762L;

	public char getHouseCode() {
		return houseCode;
	}

	public int getDeviceCode() {
		return deviceCode;
	}

	public String getDeviceState() {
		return deviceState;
	}

}
